<ul>
  <%@bookmarks.each do |bookmark| %>
    <li>
      <a href='<%= bookmark.url %>'>
        <%= bookmark.title %>
      </a>
    </li>
    <form action="/bookmarks/<%= bookmark.id %>" method="get">
      <input type="submit" id="update-<%= bookmark.id %>" value="Update">
    </form>
    <form action='/bookmarks/delete/<%= bookmark.id %>' method='post'>
      <input type='submit' id="delete-<%= bookmark.id %>" value='Delete'>
    </form>
  <% end %>
</ul><br>


<form action='/bookmarks/new' method='post'>
<label for='title'> Please enter a title for your bookmark: </label><br></br>
<input type='text' name='title'> <br></br>
<label for='url'> Please enter a URL: </label><br></br>
<input type='text' name='url'><br></br>
<input type='submit' value='Add Bookmark'>
</form>


